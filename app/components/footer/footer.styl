// @import '../../variables.css'
 #footer
  color var(--white-color)
  // margin-top 6rem
  background-image linear-gradient(95deg, #591ec0, #995cfa);
  .top-block
    padding 2.2rem 6rem
    justify-content space-evenly
    display flex
    flex-wrap wrap
    align-items center
    border-bottom 1px solid #fff
    nav
      display flex
      justify-content center
      font-size 1.125rem
      text-transform uppercase
      font-weight: bold;
    .social-links
      width 10%
      display flex
      justify-content space-between
  .bot-block
    display flex
    justify-content center
    padding 1.2rem 0
    .footer-info
      color #d9c7f6
      font-size 1.125rem
  a
    color var(--white-color)
    text-decoration none
    padding 0 .8rem
    transition filter .5s, -webkit-filter .5s, color .5s

@media screen and (min-width 768px) and (max-width 999px)
	.top-block
    padding 2.2rem 0 !important
    .footer-nav
      font-size 0.75rem !important
    img 
      width 30px

@media screen and (min-width 1000px) and (max-width 1300px)
	.top-block
    padding: 2.2rem 0 !important
