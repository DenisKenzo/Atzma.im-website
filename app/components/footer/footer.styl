// @import '../../variables.css'
 #footer
    color #fff
    margin-top 100px
    background-image: linear-gradient(95deg, #591ec0, #995cfa);
    .top-block
      padding 20px 0
      justify-content space-around
      display flex
      align-items center
      .logo
        width 15%
        display flex
        align-items center
      nav 
        display flex
        justify-content: space-between
        width 40% 
        a
          color #fff
          text-decoration none
      .logo-text
        padding-inline-start: 10px
        -webkit-padding-start 10px
        -moz-padding-start 10px
      .social-links
        width 10%
        display flex
        justify-content space-between
    .bot-block
      display flex
      justify-content: center
      padding 10px 0