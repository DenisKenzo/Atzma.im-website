// @import '../../variables.css'
#why
  padding 0 2rem
  h2
    font-size 2.25rem
    margin 0
  // height 100vh
  header
    display flex
    flex-direction column
    width 50%
    margin 0 auto
    text-align center
    margin-bottom 50px
    p
      margin-top 15px
      font-size 1.3rem
  .why-content-box
    flex-wrap wrap
    margin 0 auto
    // height 500px
    width 60%
    display flex
    justify-content center
    // flex-direction column
    align-content center
    figcaption
      font-size 1.5rem
      padding-left 30px
      font-weight 500
      -webkit-padding-start 30px
      -moz-padding-start 30px
    .content-wrap
      width 40%
      display flex
      align-items center
      margin-top 30px
      // margin 0 50px 50px 0
      img
        width 80px
@media screen and (max-width 1335px)
  header
    width 100% !important
  .why-content-box
    width 100% !important
@media screen and (max-width 800px)
  figure.content-wrap
    margin 0
    align-items flex-start !important
@media screen and (max-width 450px)
  .why-content-box
    flex-direction: column
    figure.content-wrap
      width auto !important
    figure
      margin 10px 0 !important
