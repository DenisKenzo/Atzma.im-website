// @import '../../variables.css'
#feedback
  // height 100vh
  margin-top 100px
  display flex
  align-items center
  position relative
  .rectangle-1
    top 15rem
    left 30rem
    position absolute
  .rectangle-2
    position absolute
    right 0
    top 0
  .rectangle-3
    position absolute
    bottom 10rem
    right 2rem
  .rectangle-4
    position absolute
    width 40px
    bottom 30rem
    right 2rem
  .rectangle-5
    position absolute
    width 60px
    bottom 30rem
    left 2rem
  .rectangle-6
    position absolute
    width 30px
    bottom 20rem
    left 2rem
  .rectangle-7
    position absolute
    width 40px
    bottom 10rem
    left 10rem
  .rectangle-8
    position absolute
    width 60px
    top -5rem
    right 25rem
  .rectangle-9
    position absolute
    top -2rem
    right 37rem
  .feedback-main
    display flex
    width 100%
    padding 0 10rem
    justify-content center
    // padding 0 10rem
    .text-block
      z-index 1
      display flex
      width 50%
      flex-direction column
      .desc-wrap
        -webkit-padding-end 12rem
        -moz-padding-end 12rem
        padding-inline-end 12rem
        p
          font-size 1rem
          padding: 0 3rem 2rem 0
        button 
          cursor pointer
          font-size 1rem
          border-radius 50px
          border none
          letter-spacing: 1.2px;
          background-color #ff00aa
          background-color var(--active-color)
          outline none
          padding 15px 40px
          a
            color #fff;
            text-decoration none
            cursor pointer
        button:hover
          background-color #9457f5
      .feed-img
        width 70%
    .swiper-block
      width 40%
      // min-width 35%
      // max-width 40%
      .swiper-feedback
        overflow hidden
        picture
          justify-content center
          align-items center
          margin 0 auto
          padding 30px 30px 0
          display flex
          img 
            width 100px
            height 100px
        .description-wrap
          border-bottom-left-radius 15px
          border-bottom-right-radius 15px
          display flex
          flex-direction column
          // padding 20px
          align-items center
          .rating-stars
            display flex
            img 
              padding 0 2px
        p
          font-size: 0.7rem
          font-weight: 300;
          padding 10px 30px 30px 30px
          text-align center
      .swiper-slide
        // width 200px !important
        min-width 200px
        max-width 250px
        // min-height 350px
        // max-width 250px
        // min-height 300px
        // max-height 350px
        color #fff
        border-radius 15px
        height auto
        background-image: linear-gradient(143deg, #995cfa, #591ec0);
        img 
          width 100%
          height 100%
          border-radius 50%
          object-fit cover
@media screen and (max-width 1400px)
  .swiper-block
    width 50% !important
@media screen and (max-width 1200px)
  .swiper-block
    width 60% !important
@media screen and (min-width 1600px)
  .swiper-block
    width 34% !important
@media screen and (max-width 1050px)
  .swiper-block
    width 50% !important
  .feedback-main
    flex-wrap wrap
    padding 0 !important
    align-items center
    margin 0 auto
    .text-block
      width 80% !important
      justify-content center
      p 
        text-align center
        padding 0 0 2rem !important
      .pic-wrap
        display flex
        justify-content center
      .desc-wrap
        padding 0 !important
        display flex
        flex-direction column
        align-items center
        margin-bottom 50px
@media screen and (max-width 860px)
  .swiper-block
    width 65% !important
@media screen and (max-width 670px)
  .swiper-block
    width 80% !important
@media screen and (max-width 540px)
  .swiper-block
    width 90% !important