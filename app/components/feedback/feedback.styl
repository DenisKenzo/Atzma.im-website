#feedback
  // height 100vh
  margin-top 100px
  display flex
  align-items center
  .feedback-main
    display flex
    width 100%
    padding 0 10rem
    justify-content space-around
    // padding 0 10rem
    .sub-block
      display flex
      width 50%
      flex-direction column
      .desc-wrap
        -webkit-padding-end 12rem
        -moz-padding-end 12rem
        padding-inline-end 12rem
        p
          font-size 1rem
          padding: 2rem 3rem 2rem 0
        button 
          font-size 1rem
          border-radius 50px
          border none
          letter-spacing: 1.2px;
          background-color #ff00aa
          color #fff
          outline none
          padding 15px 40px
      .feed-img
        width 70%
      .swiper-feedback
        overflow hidden
        picture
          justify-content center
          align-items center
          width 200px
          height 200px
          margin 0 auto
          padding 30px
          display flex
        .description-wrap
          border-bottom-left-radius 15px
          border-bottom-right-radius 15px
          display flex
          flex-direction column
          // padding 20px
          align-items center
          .rating-stars
            display flex
            img 
              padding 0 2px
        p
          font-size: 0.7rem
          font-weight: 300;
          padding 10px 30px 30px 30px
          text-align center
      .swiper-slide
        color #fff
        border-radius 15px
        height auto
        background-image: linear-gradient(143deg, #995cfa, #591ec0);
        img 
          width 100%
          height 100%
          border-radius 50%
          object-fit cover
    