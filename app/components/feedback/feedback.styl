#feedback
  // height 100vh
  margin-top 100px
  h2
    font-size 3rem
    margin-top 0
    margin-bottom 1rem
  // display flex
  // align-items center
  position relative
  .rectangle-1
    top 15rem
    left 30rem
    position absolute
  .rectangle-2
    position absolute
    right 0
    top 0
  .rectangle-3
    position absolute
    bottom 10rem
    right 2rem
  .rectangle-4
    position absolute
    width 40px
    bottom 30rem
    right 2rem
  .rectangle-5
    position absolute
    width 60px
    bottom 30rem
    left 2rem
  .rectangle-6
    position absolute
    width 30px
    bottom 20rem
    left 2rem
  .rectangle-7
    position absolute
    width 40px
    bottom 10rem
    left 10rem
  .rectangle-8
    position absolute
    width 60px
    top -5rem
    right 25rem
  .rectangle-9
    position absolute
    top -2rem
    right 37rem
  .feedback-main
    display flex
    width 100%
    padding 0 10rem
    justify-content center
    // padding 0 10rem
    .text-block
      z-index 1
      display flex
      width 50%
      flex-direction column
      .desc-wrap
        -webkit-padding-end 12rem
        -moz-padding-end 12rem
        padding-inline-end 12rem
        p
          font-size 1rem
          padding: 0 12rem 4rem 0
        button 
          border 2px solid transparent
          font-weight 600
          cursor pointer
          font-size 1rem
          border-radius 50px
          letter-spacing: 1.2px;
          background-color #ff00aa
          background-color var(--active-color)
          outline none
          padding 15px 40px
          color var(--white-color)
          text-decoration none
          cursor pointer
          transition background-color 0.3s linear
        button:hover
          background-color var(--white-color)
          border 2px solid #ff00aa
          color #ff00aa
          color var(--active-color)
        button:focus
          background-color #ff00aa
          background-color var(--active-color)
          color var(--white-color)
      .feed-img
        width 70%
    .slider-feedback
      max-width 580px
      // min-width: 450px
      z-index 1
      overflow hidden
      width: 50%
      height 800px
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      overflow-x: scroll;
      scroll-snap-type: x mandatory
      scroll-behavior smooth
      figure
        max-height: 360px
        min-height: 360px
        scroll-snap-align: start;
        display flex
        margin 15px 
        flex-direction column
        color var(--white-color)
        border-radius 15px
        height auto
        background-image: linear-gradient(143deg, #995cfa, #591ec0);
        picture
          justify-content center
          align-items center
          margin 0 auto
          padding 30px 30px 0
          display flex
          img 
            width 100px
            height 100px
            object-fit: cover;
            border-radius: 50%;
        .description-wrap
          border-bottom-left-radius 15px
          border-bottom-right-radius 15px
          display flex
          flex-direction column
          align-items center
          .rating-stars
            display flex
            img 
              padding 0 2px
        p
          font-size: 0.8rem
          font-weight: 300;
          padding 10px 30px 30px 30px
          text-align center
  .btn
    margin 0 0 0 15%
    display flex
    justify-content center
    .buttons
      z-index: 2
      display flex
      .prev-btn
        padding 5px
        cursor pointer
        display flex
        align-items center
      .next-btn
        padding 5px
        cursor pointer
        display flex
        align-items center
