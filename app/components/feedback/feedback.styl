#feedback
  // height 100vh
  margin-top 100px
  display flex
  align-items center
  position relative
  .rectangle-1
    top 15rem
    left 30rem
    position absolute
  .rectangle-2
    position absolute
    right 0
    top 0
  .rectangle-3
    position absolute
    bottom 10rem
    right 2rem
  .rectangle-4
    position absolute
    width 40px
    bottom 30rem
    right 2rem
  .rectangle-5
    position absolute
    width 60px
    bottom 30rem
    left 2rem
  .rectangle-6
    position absolute
    width 30px
    bottom 20rem
    left 2rem
  .rectangle-7
    position absolute
    width 40px
    bottom 10rem
    left 10rem
  .rectangle-8
    position absolute
    width 60px
    top -5rem
    right 25rem
  .rectangle-9
    position absolute
    top -2rem
    right 37rem
  .feedback-main
    display flex
    width 100%
    padding 0 10rem
    justify-content space-around
    // padding 0 10rem
    .sub-block
      display flex
      width 50%
      flex-direction column
      .desc-wrap
        -webkit-padding-end 12rem
        -moz-padding-end 12rem
        padding-inline-end 12rem
        p
          font-size 1rem
          padding: 0 3rem 2rem 0
        button 
          cursor pointer
          font-size 1rem
          border-radius 50px
          border none
          letter-spacing: 1.2px;
          background-color #ff00aa
          background-color var(--active-color)
          color #fff
          outline none
          padding 15px 40px
        button:hover
          background-color #9457f5
      .feed-img
        width 70%
      .swiper-feedback
        overflow hidden
        picture
          justify-content center
          align-items center
          width 200px
          height 200px
          margin 0 auto
          padding 30px
          display flex
        .description-wrap
          border-bottom-left-radius 15px
          border-bottom-right-radius 15px
          display flex
          flex-direction column
          // padding 20px
          align-items center
          .rating-stars
            display flex
            img 
              padding 0 2px
        p
          font-size: 0.7rem
          font-weight: 300;
          padding 10px 30px 30px 30px
          text-align center
      .swiper-slide
        color #fff
        border-radius 15px
        height auto
        background-image: linear-gradient(143deg, #995cfa, #591ec0);
        img 
          width 100%
          height 100%
          border-radius 50%
          object-fit cover
    