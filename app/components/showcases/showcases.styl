#showcases
  height 100vh
  background-repeat: no-repeat;
  background-position-x: 110%;
  display flex
  overflow hidden
  .main-box
    display flex
    width 100%
    // justify-content center
    .sub-box
      display flex
      position relative
      width 50%
      flex-direction column
      justify-content center
      flex-wrap wrap
      padding 0 10rem
      z-index: 9999
      button 
        font-size 1rem
        border-radius 50px
        border none
        letter-spacing: 1.2px;
        background-color #ff00aa
        color #fff
        outline none
        padding 15px 50px
      .ellipse-1
        width 200px
        position absolute
        left -4rem
        top 10rem
      .ellipse-2
        width 70px
        position absolute
        left 4rem
        top 60%
      .ellipse-3
        width 50px
        position absolute
        left 20rem
        top 15%
      .ellipse-4
        width 20px
        position absolute
        left 30rem
        top 15%
      .ellipse-5
        width 30px
        position absolute
        left 25rem
        top 50%
      .ellipse-6
        // width 30px
        position absolute
        left -4rem
        bottom 4%
    .main-desc
      h2
        font-size 3rem
    .desc
      padding 20px 0 50px 0
      p
        font-size 1rem
    .img-box
      width 50%
      position relative  
      img 
        position absolute
        right -10rem
        width 520px
      .second-phone
        position absolute
        right 10rem
        top 2rem
      .third-phone
        position absolute
        right 5rem
        top 27rem
      .last-phone
        position absolute
        right -18rem
        top 20rem