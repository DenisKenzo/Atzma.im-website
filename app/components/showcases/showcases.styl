#showcases
  height 100vh
  background-repeat: no-repeat;
  background-position-x: 110%;
  display flex
  overflow hidden
  .main-box
    display flex
    width 100%
    // justify-content center
    .sub-box
      // height 600px
      display flex
      width 50%
      flex-direction column
      justify-content center
      flex-wrap wrap
      padding 11rem
      button 
        font-size 14px
        border-radius 50px
        border none
        background-color #ff00aa
        color #fff
        outline none
        padding 15px 30px
    .desc
      padding 20px 0 50px 0
    .img-box
      width 50%
      position relative  
      img 
        position absolute
        right -10rem
        width 520px
      .second-phone
        position absolute
        right 10rem
        top 2rem
      .third-phone
        position absolute
        right 5rem
        top 27rem
      .last-phone
        position absolute
        right -18rem
        top 20rem