.backgroud 
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 51;
	display: flex;
	justify-content: center;
	align-items: center;
	.body 
		width: 75%;
		height: 70%;
		display: flex;
		justify-content: center;
		align-items: center;
		border-radius: 15px;
		overflow: hidden;
		box-shadow: 0 6px 12px 0 rgba(41, 41, 204, 0.12);
		background-color: var(--white-color);
		font-size: 1.2rem;
		font-weight: 500;
		animation: bodyAnimate 0.3s;
.sending 
	display: flex;
	flex-direction: column;
	color: var(--dark-color);
	align-items: center;
	padding-bottom: 3.6rem;
	p
		font-size 2.5rem
		font-weight: bold;
.plane 
	padding-bottom: 2rem;
	animation: plane_in 1.5s ease-in 0.1s forwards infinite;
.success 
	display: flex;
	flex-direction: column;
	align-items: center;
	color: var(--main-color);
	padding-bottom: 2.4rem;
	animation: success 0.6s;
	div 
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
	p 
		width: 70%;
		text-align: center;
.outer_circle
	width: 10rem;
	height: 10rem;
	background-color: rgba(39, 215, 146, 0.1);
	margin-bottom: 1.4rem;
.inner_circle 
	width: 8.1rem;
	height: 8.1rem;
	background-color: rgba(39, 215, 146, 0.2)
.center 
	width: 6.25rem;
	height: 6.25rem;
	background-image: linear-gradient(137deg, #3fefa2 15%, #0c9b94 85%);
	img 
		animation: center_mark 0.3s;
