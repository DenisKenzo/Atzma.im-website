#contact-block
  .communicate-main-block
    background-color: var(--white-color)
    display flex
    flex-direction column
    padding-bottom: 6rem;
    .communicate-sup-block
      width 50%
      margin 0 auto
      padding-top 2rem
      .communicate-title
        text-align center
      .contacts-block
        display: flex;
        justify-content: space-around;
        width 60%
        margin 0 auto
        .email-title
          font-weight: bold
        span 
          font-size: 1.375rem
    .messengers
      .messengers-wrap
        display flex
        justify-content space-between

@media screen and (min-width 1600px) and (max-width 1920px)
  .contacts-block
    width auto !important

@media screen and (min-width 1300px) and (max-width 1599px)
  .communicate-sup-block
    width 65% !important
    .contacts-block
      width auto !important

@media screen and (min-width 1000px) and (max-width 1299px)
  .communicate-sup-block
    width 90% !important
    .contacts-block
      width 100% !important

@media screen and (min-width 768px) and (max-width 999px)
	.communicate-sup-block
    width 95% !important
    .contacts-block
      width 100% !important