// @import '../../variables.css'
#contact_title
  .contact-title
    margin-top 3%
    text-align center
    h1
      font-size 3.75rem
      font-weight bold
    h2
      font-size 1.75rem
  .contact-details
    width: 50%;
    display: flex;
    flex-direction: column;
    text-align: center;
    margin: 0 auto;
    p 
      font-weight: 600;
      margin-bottom: 0.75rem
      text-align: start
      font-size: 1rem
    input 
      height 3.875rem
      border-radius: 8px;
      border: solid 1px #c0c6d3;
      outline none
      font-size 1.125rem
      padding 0 1.375rem
  .client-message
    width: 50%;
    display: flex;
    flex-direction: column;
    text-align: center;
    margin: 0 auto;
    p 
      font-weight: 600;
      margin 2rem 0 0.75rem 0
      text-align: start
      font-size: 1rem
    textarea
      height 9rem
      border-radius: 8px;
      border: solid 1px #c0c6d3;
      outline none
      font-size 1.4rem
      padding 1.375rem
  .send-msg-btn
    text-align: center
    margin 4rem 0 4rem
    .active-btn
      padding: 1.2rem 2.4rem
      cursor pointer
      font-size 1.375rem
      color var(--white-color)
      text-transform uppercase
.falseValidate
  border-color red !important
.falseValidateText
  color red !important