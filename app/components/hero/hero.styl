// @import '../../variables.css'
#hero
  height 100vh
  background-image: linear-gradient(119deg, #441595, rgba(89, 30, 192, 0.94) 22%, rgba(110, 43, 217, 0.75) 53%, rgba(131, 74, 223, 0.85) 79%, #9f61f7);
  .sup-block
    height 100%
    .top
      color var(--white-color)
      height 100%
      .contact_head
        background-image: none !important
      .gallery
        display: flex;
        width: 300px;
        height: 300px;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        // scroll-snap-type: x mandatory;
        img
          width 100%
          scroll-snap-align: start;
      .relative-top
        position relative
        .ellipse-1
          position absolute
          left 9rem
          top 7rem
        .ellipse-2
          position absolute
          left 24rem
          top 4rem
        .ellipse-3
          position absolute
          left 40rem
          top 10rem
        .ellipse-4
          position absolute
          right 10rem
          top 10rem
        .ellipse-5
          position absolute
          left 6rem
          top 30rem
        .ellipse-6
          position absolute
          left 30rem
          top 24rem
          width 40px
        .ellipse-7
          position absolute
          right 10rem
          top 34rem
          width 20px
        .ellipse-8
          position absolute
          left -1rem
          top 17rem
          width 50px
        .ellipse-9
          position absolute
          right 5rem
          top 17rem
      .header-content
        // padding-top 6%
        display flex
        justify-content space-around
        h1
          letter-spacing: 1px
          font-size 72px
        .header-content-wrap
          z-index 1
          width 40%
          padding 15% 0 0 3%
          .try-for-free-btn
            text-transform uppercase
            font-size: 24px;
            display: flex;
            width: 300px;
            height: 74px;
            justify-content: center;
            align-items: center;
            border-radius 50px
            border 1px solid transparent
            /* polyfill for old browsers */
            background-color #f0a
            background-color var(--active-color)
            outline none
            text-decoration none
            font-weight 600
            transition background-color 0.3s linear, border-color 0.3s linear, color 0.3s linear
            &:hover, &:focus
              /* polyfill for old browsers */
              background-color #fff
              background-color var(--white-color)
              border-color currentColor
              color var(--active-color) !important
              svg path
                fill #f0a
                stroke:#f0a
            svg 
              width 24px
              height 24px
              fill #fff
              stroke-width: 1.5px
              stroke:#fff
              margin-inline-end: 10px
            img
              padding-inline-end 1rem
          .header-content-wrap-text
            a
              padding 15px 40px
              color var(--white-color)
            .header-desc
              padding 20px 0 50px 0
              p
                font-size 28px   
@media screen and (max-width 768px)
  #hero
    background-position-y: 79% !important
  .top
    padding 0 !important
  .sup-block
    background none !important
  .log-in
    .sign-in-btn
      margin 0 !important
  .logo-wrap
    width 97px !important
   .header-content
    display flex
    flex-direction: column
    justify-content center
    align-items center
  .header-content-wrap
    width 90% !important
    padding 0 !important
    .header-content-wrap-text
      text-align center
  .top-nav
    width auto !important
    a
      padding 5px 0
  .log-in
    flex-direction: column
    justify-content center
    .login-btn
      padding-bottom 15px
  .logo-wrap
    flex-direction: column
    justify-content center
    img
      padding-bottom 15px
  .ellipse-1
    display none

