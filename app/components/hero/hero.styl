// @import '../../variables.css'
#hero
  height 90vh
  background-repeat: no-repeat;
  background-position-x 66%
  background-position-y 88%
  .top
    color #fff;
    // height: -webkit-fill-available;
    padding-top 27px
    .relative-top
      position relative
      .ellipse-1
        position absolute
        left 9rem
        top 7rem
      .ellipse-2
        position absolute
        left 24rem
        top 4rem
      .ellipse-3
        position absolute
        left 40rem
        top 10rem
      .ellipse-4
        position absolute
        right 10rem
        top 10rem
      .ellipse-5
        position absolute
        left 6rem
        top 30rem
      .ellipse-6
        position absolute
        left 30rem
        top 24rem
        width 40px
      .ellipse-7
        position absolute
        right 10rem
        top 34rem
        width 20px
      .ellipse-8
        position absolute
        left -1rem
        top 17rem
        width 50px
      .ellipse-9
        position absolute
        right 5rem
        top 17rem
    .header-wrap
      display flex
      width 100%
      justify-content space-around
      nav 
        display flex
        align-items center
        width 60%
        justify-content space-around
      a
        color #fff;
        text-decoration none
      .logo-wrap
        display flex
        align-items center
      .log-in
        align-items center
        display flex
        .sign-in-btn
          height 48px
          display flex
          align-items center
          margin-inline-start 10px
          -webkit-margin-start 10px
          -moz-margin-start 10px
          padding 0 20px
          border-radius 50px
          background-color #ff00aa
    .header-content
      padding 5rem 20rem
      // height 600px
      display flex
      justify-content space-around
      h1
        letter-spacing: 1px
        font-size 48px
      .header-content-wrap-text
        width 400px
        button
          font-size 14px
          border-radius 50px
          border none
          background-color #ff00aa
          color #fff
          outline none
          padding 15px 30px
        .header-desc
          padding 20px 0 50px 0
          p
            font-weight 100
      .wrap-calendar
        padding-top 5%
        img 
          width 500px