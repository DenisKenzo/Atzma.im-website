// @import '../../variables.css'
#hero
  height 100vh
  background-repeat: no-repeat;
  background-position-x: 66%
  background-position-y 88%
  .sup-block
    height 100vh
    background-repeat no-repeat
    background-position-y: 145%;
    background-position-x: 42vw;
    background-size 70%
    .top
      color var(--white-color)
      padding-top 27px
      .gallery
        display: flex;
        width: 300px;
        height: 300px;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        // scroll-snap-type: x mandatory;
        img
          width 100%
          scroll-snap-align: start;
      .relative-top
        position relative
        .ellipse-1
          position absolute
          left 9rem
          top 7rem
        .ellipse-2
          position absolute
          left 24rem
          top 4rem
        .ellipse-3
          position absolute
          left 40rem
          top 10rem
        .ellipse-4
          position absolute
          right 10rem
          top 10rem
        .ellipse-5
          position absolute
          left 6rem
          top 30rem
        .ellipse-6
          position absolute
          left 30rem
          top 24rem
          width 40px
        .ellipse-7
          position absolute
          right 10rem
          top 34rem
          width 20px
        .ellipse-8
          position absolute
          left -1rem
          top 17rem
          width 50px
        .ellipse-9
          position absolute
          right 5rem
          top 17rem
      .header-wrap
        display flex
        z-index: 1
        width 100%
        justify-content space-around
        .top-nav
          display flex
          font-weight 600
          align-items center
          width 60%
          justify-content space-around
          z-index 1
          a
            color var(--white-color)
            text-decoration none
            cursor pointer
            transition color 0.3s linear
          a:hover
            color var(--active-color)
          a:focus
            color var(--white-color)
        .logo-wrap
          display flex
          z-index 1
          align-items center
        .log-in
          z-index: 1
          align-items center
          display flex
          a
            color var(--white-color)
            text-decoration none
            cursor pointer
          .login-btn
            cursor pointer
            transition color 0.2s linear
          .login-btn:hover
            color var(--active-color)
          .login-btn:focus
            color var(--white-color)
          .sign-in-btn
            transition background-color 0.3s linear
            font-weight 600
            cursor pointer
            height 48px
            display flex
            align-items center
            margin-inline-start 25px
            -webkit-margin-start 25px
            -moz-margin-start 25px
            padding 0 25px
            border-radius 50px
            background-color #ff00aa
            background-color var(--active-color)
          .sign-in-btn:hover
            // transition color 0.5s linear
            background-color #fff
            background-color var(--white-color)
            color var(--active-color)
          .sign-in-btn:focus
            background-color #ff00aa
            background-color var(--active-color)
            color var(--white-color)
      .header-content
        padding-top 6%
        display flex
        justify-content center
        h1
          letter-spacing: 1px
          font-size 3rem
        .header-content-wrap
          z-index 1
          width 30%
          padding 0 2rem
          .header-content-wrap-text
            a
              padding 15px 40px
              color var(--white-color)
            .header-desc
              padding 20px 0 50px 0
              p
                font-size 1.2rem
        .wrap-calendar
          z-index 1
          padding-top 5%

@media screen and (max-width 767px)
  #hero
    background-position-y: 79% !important
  .top
    padding 0 !important
  .sup-block
    background none !important
  .log-in
    .sign-in-btn
      margin 0 !important
  .logo-wrap
    width 97px !important
   .header-content
    display flex
    flex-direction: column
    justify-content center
    align-items center
  .header-content-wrap
    width 90% !important
    padding 0 !important
    .header-content-wrap-text
      text-align center
  .top-nav
    flex-direction column
    width auto !important
    a
      padding 5px 0
  .log-in
    flex-direction: column
    justify-content center
    .login-btn
      padding-bottom 15px
  .logo-wrap
    flex-direction: column
    justify-content center
    img
      padding-bottom 15px
  .ellipse-1
    display none

