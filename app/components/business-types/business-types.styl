// @import '../../variables.css'
#business_types
  margin-top 6rem
  padding 0 2rem
  h2
    font-size 3rem
    margin 0
  h3
    font-size 1.625rem
    margin 0
    font-weight: 400;
    padding .6rem 0
  .header
    display flex
    flex-direction column
    width 50%
    margin 0 auto
    text-align center
    .desc
      margin-top 1rem
      p
        font-size 1.2rem
  .content-box
    margin-top 6rem
    padding 0 16vw
    display flex
    position relative
    .slider
      width: 100%
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory
      scroll-behavior smooth
      &::-webkit-scrollbar
        width 0.2rem
      figure
        scroll-snap-align: start;
        display flex
        margin 0 1rem
        flex-direction column
        picture
          display flex
          img
            width 100%
            height 12rem
            object-fit: cover
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
            // width: -webkit-fill-available;
            // height 50%
            // width 100%
            // overflow hidden
        figcaption
          border-bottom-left-radius 1rem
          border-bottom-right-radius 1rem
          background-color var(--white-color)
          display flex
          flex-direction column
          align-items center
          text-align center
          & > *
            width 100%
          p
            font-size: 1rem
            font-weight: 300;
            padding .6rem 2.2rem 2rem
          h3
            margin-top 20px
    .nav-btn
      display flex
      align-items center
      [dir=rtl] &
        -webkit-transform scale(-1)
        transform scale(-1)
    p
      font-size 2rem
      padding-left 2rem
      -webkit-padding-start 2rem
      -moz-padding-start 2rem
      padding-inline-start 2rem
    .content-wrap
      display flex
      align-items center
      margin 3rem
      flex-direction column

@media screen and (max-width 450px)
  #business_types
    margin-top 4rem
    .content-box
      margin-top 4rem
      padding 0
  .header
    width 100% !important
  figure
    scroll-snap-align center !important

@media screen and (max-width 1600px)
  .content-box
    padding 0 !important
