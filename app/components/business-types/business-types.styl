// @import '../../variables.css'
#business-types
  margin-top 100px
  h2
    font-size 48px
    margin 0
  h3 
    font-size 1.625rem
    margin 0
    font-weight: 400;
    padding 10px 0 
  .header
    display flex
    flex-direction column
    width 50%
    margin 0 auto
    text-align center
    .desc
      margin-top 20px
      p
        font-size 1.2rem
  .content-box
    margin-top 100px
    padding 0 14vw
    display flex
    overflow hidden
    p
      font-size 36px
      padding-left 30px
      -webkit-padding-start 30px
      -moz-padding-start 30px
    figure
      display flex
      margin 0
      flex-direction column
      width 100%
      // width min-content
      picture
        display flex
        img 
          width: -webkit-fill-available;
          height 50%
          // width 100%
          // overflow hidden
      figcaption
        border-bottom-left-radius 15px
        border-bottom-right-radius 15px
        background-color #fff
        display flex
        flex-direction column
        // padding 20px
        align-items center
        p
          font-size: 1rem
          font-weight: 300;
          padding 10px 30px 30px 30px
          text-align center
    .content-wrap
      display flex
      align-items center
      margin 50px
      flex-direction column
      // img 
      //   width 250px
    .swiper-pagination
      padding-top 50px
      text-align center
    .swiper-button-prev, .swiper-button-next
      position absolute
      top 50%
      // width 20px
      // height 20px
      border-radius 50%
      z-index 10
    .swiper-button-prev
      left 0
      right auto
      -webkit-margin-start 15px
      -moz-margin-start 15px
    .swiper-button-next
      right 0
      left auto
      -webkit-margin-end 15px
      -moz-margin-end 15px
    .swiper-button-next-rtl
      transform rotate(180deg)
      position absolute
      z-index 10
      left 0
      top 50%
      right auto
      -webkit-margin-start 15px
      -moz-margin-start 15px
    .swiper-button-prev-rtl
      position absolute
      transform rotate(180deg)
      top 50%
      right 0
      z-index: 10
      left auto
      -webkit-margin-end 15px
      -moz-margin-end 15px