// @import '../../variables.css'
#business_types
  margin-top 6rem
  padding 0 2rem
  h2
    font-size 3rem
    margin 0
  h3
    font-size 1.5rem
    margin 0
    font-weight 500
    padding .6rem 1rem
    word-wrap break-word
  .header
    display flex
    flex-direction column
    width 50%
    margin 0 auto
    text-align center
    .desc
      margin-top 1rem
      p
        font-size 1.2rem
  .content-box
    position relative
    flex-wrap: wrap;
    margin: 0 auto;
    flex-direction: row
    width: 90%;
    justify-content: center;
    align-content: center;
    .slide
      display: flex;
      width: 100%;
      height 36.25rem
      align-items: center;
      flex-direction: column;
      margin: 20px 20px;
      border-radius: 20px;
      box-shadow: 0 20px 20px 0 rgba(41,41,204,0.16);
      flex-direction column
      background-color var(--white-color)
      picture
        display flex
        width 100%
        img
          width 100%
          height 20rem
          object-fit cover
          border-top-right-radius: 15px
          border-top-left-radius: 15px
      figcaption
        display flex
        flex-direction column
        align-items center
        text-align center
        p
          font-size: 1.1rem
          font-weight 300
          padding .6rem 2.2rem 2rem
          word-break: break-word
        h3
          margin-top 20px
    .swiper-slide
      display flex
      // justify-content center
      flex-wrap: wrap
      padding-bottom 10rem
    .btn-prev, .btn-next, .btn-prev-rtl, .btn-next-rtl
      position absolute
      top 40%
      height 50px
    .btn-prev
      left 100%
    .btn-next
      right 100%
    .btn-prev-rtl
      right 100%
    .btn-next-rtl
      left 100%
    p
      font-size 2rem
      padding-left 2rem
      -webkit-padding-start 2rem
      -moz-padding-start 2rem
      padding-inline-start 2rem
    .content-wrap
      display flex
      align-items center
      margin 3rem
      flex-direction column

@media screen and (min-width 1600px) and (max-width 1920px)
  .content-box
    width: 80% !important

@media screen and (min-width 1921px)
  .content-box
    width: 80% !important

@media screen and (min-width 768px) and (max-width 1024px)
  .btn-prev
    left 97% !important
  .btn-next
    right 97% !important 
  .btn-prev-rtl
    right 97% !important
  .btn-next-rtl
    left 97% !important
