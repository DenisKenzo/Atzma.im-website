// @import '../../variables.css'
#business_types
  margin-top 6rem
  padding 0 2rem
  h2
    font-size 3rem
    margin 0
  h3
    font-size 1.5rem
    margin 0
    font-weight 500
    padding .6rem 1rem
    word-wrap break-word
  .header
    display flex
    flex-direction column
    width 50%
    margin 0 auto
    text-align center
    .desc
      margin-top 1rem
      p
        font-size 1.2rem
  .content-box
    margin-top 6rem
    padding 0 13vw
    display flex
    position relative
    .slider
      width: 100%
      display flex
      overflow-x auto
      scroll-snap-type: x mandatory
      scroll-behavior smooth
      &::-webkit-scrollbar
        width 0.2rem
      .slide
        scroll-snap-align start
        border-radius 15px
        overflow hidden
        display flex
        min-width 31%
        margin 0 1rem
        flex-direction column
        background-color var(--white-color)
        picture
          display flex
          img
            width 100%
            height 21rem
            object-fit cover
            // width: -webkit-fill-available;
            // height 50%
            // width 100%
            // overflow hidden
        figcaption
          display flex
          flex-direction column
          align-items center
          text-align center
          & > *
            width 100%
          p
            font-size: 1.1rem
            font-weight 300
            padding .6rem 2.2rem 2rem
            word-break: break-word
          h3
            margin-top 20px
    .nav-btn
      display flex
      align-items center
      [dir=rtl] &
        -webkit-transform scale(-1)
        transform scale(-1)
    p
      font-size 2rem
      padding-left 2rem
      -webkit-padding-start 2rem
      -moz-padding-start 2rem
      padding-inline-start 2rem
    .content-wrap
      display flex
      align-items center
      margin 3rem
      flex-direction column

@media screen and (max-width 450px)
  #business_types
    margin-top 4rem
    padding 0 .5rem
    .content-box
      margin-top 4rem
      padding 0
  .header
    width 100% !important
  .slide
    min-width 96% !important
  figure
    scroll-snap-align center !important
@media screen and (max-width 535px) and (min-width 451px)
  #business_types
    .slide
      min-width 96% !important
@media screen and (max-width 768px) and (min-width 536px)
  #business_types
    .slide
      min-width 44% !important
@media screen and (max-width 1376px) and (min-width 769px)
  #business_types
    .slide
      min-width 30% !important
@media screen and (max-width 1600px) and (min-width 1442px)
  #business_types
    .slide
      min-width 30% !important
@media screen and (max-width 1441px)
  .content-box
    padding 0 !important
